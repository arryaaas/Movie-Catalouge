<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.arya.moviecatalogue.ui.movie.MovieFragment"
        android:label="Movie"
        tools:layout="@layout/fragment_movie">
    </fragment>
    <fragment
        android:id="@+id/navigation_tv"
        android:name="com.arya.moviecatalogue.ui.tv.TvFragment"
        android:label="Tv Show"
        tools:layout="@layout/fragment_tv" />
    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.arya.moviecatalogue.ui.favorite.FavoriteFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite" />
